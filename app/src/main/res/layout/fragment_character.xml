<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_weight="8">

        <ProgressBar
            android:id="@+id/game_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progress="40"
            android:progressDrawable="@drawable/finish_progress_bar"/>

        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="250/500 День"
            android:textColor="#000"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:layout_weight="50"
        android:orientation="vertical"
        android:background="@color/background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="25"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/fill_grey">

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Персонаж"
                android:textColor="#000"
                android:textSize="14sp"
                android:layout_alignParentLeft="true"/>

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/game_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="23:00"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:id="@+id/game_time_image"
                        android:layout_width="21dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center"
                        android:src="@drawable/clock"/>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="110"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/player_image"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/player_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="Dimantik"
                    android:textColor="@color/white"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/power_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                    <TextView
                        android:id="@+id/player_power"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="Сила:  0.5"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/protection_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                    <TextView
                        android:id="@+id/player_protection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="Защита:  5"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/kill_skill_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/skull"/>

                    <TextView
                        android:id="@+id/player_kill_skill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="Навык убийства:  0.5"
                        android:textColor="@color/white"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_weight="40"
        android:orientation="vertical"
        android:background="@color/background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Жизненный показатели"
            android:textColor="#000"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:gravity="center"
            android:textSize="14sp"
            android:background="@color/fill_grey"/>

        <RelativeLayout
            android:id="@+id/food_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <ProgressBar
                android:id="@+id/food_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progress="90"
                android:progressDrawable="@drawable/vital_progress_bar"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/food_image"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/food"/>

                <TextView
                    android:id="@+id/progress_food_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="250/500"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/drink_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <ProgressBar
                android:id="@+id/drink_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progress="10"
                android:progressDrawable="@drawable/vital_progress_bar"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/drink_image"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/water"/>

                <TextView
                    android:id="@+id/progress_drink_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="250/500"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/health_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <ProgressBar
                android:id="@+id/health_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progress="60"
                android:progressDrawable="@drawable/vital_progress_bar"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/health_image"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/health"/>

                <TextView
                    android:id="@+id/progress_health_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="250/500"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/energy_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_margin="5dp">

            <ProgressBar
                android:id="@+id/energy_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progress="50"
                android:progressDrawable="@drawable/vital_progress_bar"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/energy_image"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/energy"/>

                <TextView
                    android:id="@+id/progress_energy_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="250/500"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_weight="39"
        android:orientation="vertical"
        android:background="@color/background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Снаряжение"
            android:textColor="#000"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:gravity="center"
            android:textSize="14sp"
            android:background="@color/fill_grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <android.support.v7.widget.CardView
                android:id="@+id/current_head_clothes"
                android:orientation="vertical"
                android:layout_width="75dp"
                android:layout_height="75dp"
                card_view:cardCornerRadius="5dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:background="@drawable/layout_click_effect">

                    <ImageView
                        android:id="@+id/head_clothes_image"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Голова"
                        android:textColor="#000"
                        style="@style/Base.TextAppearance.AppCompat.Body2"
                        android:gravity="center"
                        android:textSize="14sp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/current_body_clothes"
                android:orientation="vertical"
                android:layout_width="75dp"
                android:layout_height="75dp"
                card_view:cardCornerRadius="5dp"
                card_view:cardBackgroundColor="@color/fill_grey"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:background="@drawable/layout_click_effect">

                    <ImageView
                        android:id="@+id/body_clothes_image"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Тело"
                        android:textColor="#000"
                        style="@style/Base.TextAppearance.AppCompat.Body2"
                        android:gravity="center"
                        android:textSize="14sp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/current_legs_clothes"
                android:orientation="vertical"
                android:layout_width="75dp"
                android:layout_height="75dp"
                card_view:cardCornerRadius="5dp"
                card_view:cardBackgroundColor="@color/fill_grey"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:background="@drawable/layout_click_effect">

                    <ImageView
                        android:id="@+id/legs_clothes_image"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Ноги"
                        android:textColor="#000"
                        style="@style/Base.TextAppearance.AppCompat.Body2"
                        android:gravity="center"
                        android:textSize="14sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/current_feet_clothes"
                android:orientation="vertical"
                android:layout_width="75dp"
                android:layout_height="75dp"
                card_view:cardCornerRadius="5dp"
                card_view:cardBackgroundColor="@color/fill_grey"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:background="@drawable/layout_click_effect">

                    <ImageView
                        android:id="@+id/feet_clothes_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Ступни"
                        android:textColor="#000"
                        style="@style/Base.TextAppearance.AppCompat.Body2"
                        android:gravity="center"
                        android:textSize="14sp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_weight="39"
        android:orientation="vertical"
        android:background="@color/background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Транспорт и оружие"
            android:textColor="#000"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:gravity="center"
            android:textSize="14sp"
            android:background="@color/fill_grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <android.support.v7.widget.CardView
                android:id="@+id/current_transport"
                android:orientation="vertical"
                android:layout_width="75dp"
                android:layout_height="75dp"
                card_view:cardCornerRadius="5dp"
                card_view:cardBackgroundColor="@color/fill_grey"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:background="@drawable/layout_click_effect">

                    <ImageView
                        android:id="@+id/transport_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Транспорт"
                        android:textColor="#000"
                        style="@style/Base.TextAppearance.AppCompat.Body2"
                        android:gravity="center"
                        android:textSize="14sp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/current_bag"
                android:orientation="vertical"
                android:layout_width="75dp"
                android:layout_height="75dp"
                card_view:cardCornerRadius="5dp"
                card_view:cardBackgroundColor="@color/fill_grey"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:background="@drawable/layout_click_effect">

                    <ImageView
                        android:id="@+id/bag_image"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Рюкзак"
                        android:textColor="#000"
                        style="@style/Base.TextAppearance.AppCompat.Body2"
                        android:gravity="center"
                        android:textSize="14sp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/current_first_weapon"
                android:orientation="vertical"
                android:layout_width="75dp"
                android:layout_height="75dp"
                card_view:cardCornerRadius="5dp"
                card_view:cardBackgroundColor="@color/fill_grey"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:background="@drawable/layout_click_effect">

                    <ImageView
                        android:id="@+id/first_weapon_image"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Оружие 1"
                        android:textColor="#000"
                        style="@style/Base.TextAppearance.AppCompat.Body2"
                        android:gravity="center"
                        android:textSize="14sp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/current_second_weapon"
                android:orientation="vertical"
                android:layout_width="75dp"
                android:layout_height="75dp"
                card_view:cardCornerRadius="5dp"
                card_view:cardBackgroundColor="@color/fill_grey"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:background="@drawable/layout_click_effect">

                    <ImageView
                        android:id="@+id/second_weapon_image"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Оружие 2"
                        android:textColor="#000"
                        style="@style/Base.TextAppearance.AppCompat.Body2"
                        android:gravity="center"
                        android:textSize="14sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
