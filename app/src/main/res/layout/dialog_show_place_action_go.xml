<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    card_view:cardBackgroundColor="#fff"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/place_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            tools:text="Отправиться в город Z?"
            android:textColor="#000"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@color/fill_grey"/>


        <ImageView
            android:id="@+id/place_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            tools:src="@color/fill_grey"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>


        <TextView
            android:id="@+id/important_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_marginLeft="3dp"
            tools:text="Прежде чем отправиться, убедитесь что у вас достаточно провизии для переезда."
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>


        <Button
            android:id="@+id/go_to_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Отправиться"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
